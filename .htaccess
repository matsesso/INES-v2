DirectoryIndex inicio.html

Options -MultiViews
RewriteEngine On

# Redireciona URLs com extens찾o .html para URLs sem a extens찾o
RewriteCond %{THE_REQUEST} ^[A-Z]+\ /([^/]+/)*[^.]+\.html(\?[^\ ]*)?\ HTTP/
RewriteRule ^(([^/]+/)*[^.]+)\.html$ /$1 [R=301,L]

# Verifica se o arquivo ou diret처rio n찾o existe fisicamente
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f

# Reescreve a URL internamente para adicionar .html
RewriteRule ^(.*)$ $1.html [L]

<Files .htaccess>
    Order Allow,Deny
    Deny from all
</Files>
